<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
    <title>BMap</title>
    <style type="text/css">
        body, html {
            width: 100%;
            height: 100%;
            margin: 0;
            font-family: "微软雅黑";
        }

        #allmap {
            width: 100%;
            height: 100%;
        }
    </style>
    <script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=jGMQOfDd4HEYBlqhfsZq4Hj6"></script>
</head>
<body>
    <div id="allmap"></div>
    <script type="text/javascript">
        // 百度地图API功能
        var map = new BMap.Map("allmap");    // 创建Map实例
        map.centerAndZoom(new BMap.Point(116.404, 39.915), 11);  // 初始化地图,设置中心点坐标和地图级别
        //添加地图类型控件
        map.addControl(new BMap.MapTypeControl({
            mapTypes: [
                BMAP_NORMAL_MAP,
                BMAP_HYBRID_MAP
            ]
        }));
        map.enableScrollWheelZoom(true);     //开启鼠标滚轮缩放

        var centerTileCoord = null;
        var newCenterTileCoord = null;
        var tileLayer = new BMap.TileLayer();
        tileLayer.getTilesUrl = function (tileCoord, zoom) {

            if (centerTileCoord == null) {
                centerTileCoord = tileCoord;
                var projection = new BMap.MercatorProjection();
                var scale = Math.pow(2, 18 - zoom) * 256;
                var point = projection.pointToLngLat({ x: tileCoord.x * scale, y: tileCoord.y * scale });
                var resolution = 360 / Math.pow(2, zoom);
                var x = Math.round((point.lng + 180) / resolution);
                var y = Math.round((90 - point.lat) / resolution);
                newCenterTileCoord = { x: x, y: y };
            }

            var x = tileCoord.x - centerTileCoord.x + newCenterTileCoord.x;
            var y = centerTileCoord.y - tileCoord.y + newCenterTileCoord.y;

            var url = "http://t0.tianditu.gov.cn/vec_c/wmts?&tk=fdcab2d88e293c189daf038cd01592e6&Service=WMTS&Request=GetTile&Version=1.0.0&layer=vec&style=default&tilematrixset=c&Format=tiles&TileMatrix=" + zoom + "&TileCol=" + x + "&TileRow=" + y;
            return url;
        }

        map.addEventListener("zoomstart", function () {
            centerTileCoord = null;
        });
        
        function add_control() {
            map.addTileLayer(tileLayer);
        }
        function delete_control() {
            map.removeTileLayer(tileLayer);
        }
        add_control();
    </script>
</body>
</html>
