
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
    <title>BMap</title>
    <style type="text/css">
        body, html {
            width: 100%;
            height: 100%;
            overflow: hidden;
            margin: 0;
            font-family: "微软雅黑";
        }

        #allmap {
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body>
    <div id="allmap"></div>
    <script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=jGMQOfDd4HEYBlqhfsZq4Hj6"></script>
    <script type="text/javascript">
        // 百度地图API功能
        var map = new BMap.Map('allmap');
        map.centerAndZoom(new BMap.Point(116.327159, 39.990912), 20);
        map.enableScrollWheelZoom(true);
        //GPS坐标
        var x = 116.327159;
        var y = 39.990912;
        var x1, y1;
        for (var i = 6; i < 7; i++) {
            var m = Math.pow(10, i);
            AddMarker(Math.round(x * m) / m, Math.round(y * m) / m);
            AddMarker((Math.round(x * m) + 1) / m, (Math.round(y * m) + 1) / m);
        }

        function AddMarker(x, y) {
            var point = new BMap.Point(x, y);
            var marker = new BMap.Marker(point);
            map.addOverlay(marker);
        }

        function cRound(value, i) {
            var m = Math.pow(10, i);
            return Math.round(value * m) / m;
        }
    </script>
</body>
</html>
